<?xml version="1.0" ?>
<!DOCTYPE plugin PUBLIC "-//JPF//Java Plug-in Manifest 1.0" "http://jpf.sourceforge.net/plugin_1_0.dtd">
<plugin id="alchemy.sketch" version="1.0.0">
    	<requires> 
        	<import plugin-id="alchemy.core"/> 
    	</requires> 

	<runtime>
        	<library id="sketch" path="/" type="code">
			<export prefix="*" /> 
		</library>
                <library type="resources" path="data/" id="data" />
    	</runtime>
	<extension plugin-id="alchemy.core" point-id="Module" id="sketchModule"> 
        <parameter id="class" value="alchemy.Sketch"/> 
        <parameter id="name" value="Sketch"/> 
	<parameter id="description" value="Basic sketching" />
	<parameter id="icon" value="tab.gif" />
    </extension>
</plugin>