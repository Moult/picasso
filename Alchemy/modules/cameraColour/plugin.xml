<?xml version="1.0" ?>
<!DOCTYPE plugin PUBLIC "-//JPF//Java Plug-in Manifest 1.0" "http://jpf.sourceforge.net/plugin_1_0.dtd">

<plugin id="org.alchemy.affect.cameraColour" version="1.0.1">
    
    <requires> 
        <import plugin-id="org.alchemy.core"/> 
    </requires> 
    
    <runtime>
        <library id="cameraColour" path="/" type="code">
            <export prefix="*" /> 
        </library>
        <library type="resources" path="data/" id="data" />
    </runtime>
    
    <extension plugin-id="org.alchemy.core" point-id="Affect" id="cameraColourAffect"> 
        <parameter id="class" value="org.alchemy.affect.CameraColour"/> 
        <parameter id="name" value="Camera Colour"/> 
        <parameter id="description" value="Use a web camera to select live colours" />
        <parameter id="icon" value="icon.png" />
    </extension>
    
</plugin>