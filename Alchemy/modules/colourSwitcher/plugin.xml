<?xml version="1.0" ?>
<!DOCTYPE plugin PUBLIC "-//JPF//Java Plug-in Manifest 1.0" "http://jpf.sourceforge.net/plugin_1_0.dtd">

<plugin id="org.alchemy.affect.colourSwitcher" version="1.0.2">
    
    <requires> 
        <import plugin-id="org.alchemy.core"/> 
    </requires> 
    
    <runtime>
        <library id="colourSwitcher" path="/" type="code">
            <export prefix="*" /> 
        </library>
        <library type="resources" path="data/" id="data" />
    </runtime>
    
    <extension plugin-id="org.alchemy.core" point-id="Affect" id="colourSwitcherAffect"> 
        <parameter id="class" value="org.alchemy.affect.ColourSwitcher"/> 
        <parameter id="name" value="Colour Switcher"/> 
        <parameter id="description" value="Automate the changing of colours" />
        <parameter id="icon" value="icon.png" />
    </extension>
    
</plugin>